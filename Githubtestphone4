<body>
  <div class="container">
    <img
      class="logo"
      src="https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/1f355.png"
      alt="Pizza slice"
    >
    <h1>Click Below to Redeem Your Coupon!</h1>
    <form id="couponForm">
      <input
        id="phone"
        name="phone"
        type="tel"
        placeholder="Enter your phone #"
        required
      >
      <button type="submit">Redeem Coupon</button>
    </form>
    <div id="message"></div>
  </div>

  <script>
    // ‚Üê swap in your Web App URL here:
    const API = 'https://script.google.com/macros/s/AKfycbyZl3rLA1sBHeQmya__Dlx9ZnAIfNnbR-DsgBhX-_J5-JMSgayvyu-uG_Rqd5Br_7ym_A/exec';

    const form = document.getElementById('couponForm');
    const msg  = document.getElementById('message');

    form.addEventListener('submit', async e => {
      e.preventDefault();
      const phone = document.getElementById('phone').value.trim();
      msg.textContent = '‚è≥ Checking‚Ä¶';
      msg.className   = '';

      try {
        const res  = await fetch(API + '?phone=' + encodeURIComponent(phone));
        const json = await res.json();
        if (json.status === 'success') {
          msg.textContent = `üéâ The code is: ${json.code} for 50% off!`;
          msg.className   = 'success';
        } else {
          msg.textContent = json.message;
          msg.className   = 'error';
        }
      } catch (err) {
        msg.textContent = '‚ö†Ô∏è Network error';
        msg.className   = 'error';
        console.error(err);
      }
    });
  </script>
