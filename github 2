<body>

  <div class="icon">üçï</div>
  <h1>Click Below to Redeem Your Coupon!</h1>
  <button id="redeem">Redeem Coupon</button>
  <div id="msg" class="message"></div>

  <!-- FingerprintJS -->
  <script src="https://cdn.jsdelivr.net/npm/@fingerprintjs/fingerprintjs@3/dist/fp.min.js"></script>
  <script>
    (async () => {
      // 1) Start both lookups simultaneously:
      const fpPromise = FingerprintJS.load().then(agent => agent.get());
      const ipPromise = fetch('https://api.ipify.org?format=json')
        .then(r => r.json())
        .then(data => data.ip)
        .catch(err => {
          console.warn('IP lookup failed:', err);
          return 'unknown';
        });

      // 2) Wait for both to finish:
      const [{ visitorId }, ip] = await Promise.all([fpPromise, ipPromise]);
      console.log('Fingerprint:', visitorId, 'IP:', ip);

      const btn = document.getElementById('redeem');
      const msg = document.getElementById('msg');

      // 3) Only now wire up the button so both values are ready:
      btn.addEventListener('click', async () => {
        btn.disabled = true;
        msg.textContent = 'Checking‚Ä¶';
        msg.className = 'message';

        try {
          const res = await fetch(
            'https://script.google.com/macros/s/AKfycbyUyS38KgDsh0elqVrNO8tBlBzaPV0TUCEXcyrhpxSP7h4MP80ExIkXGSWVCumDSR-X/exec',
            {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: new URLSearchParams({ fp: visitorId, ip })
            }
          );
          const result = await res.json();

          if (result.success) {
            msg.classList.add('success');
            msg.innerHTML = `‚úÖ Success! Your code is <strong>${result.code}</strong>`;
          } else {
            msg.classList.add('error');
            msg.textContent = '‚ö†Ô∏è Coupon already redeemed.';
          }
        } catch (e) {
          msg.classList.add('error');
          msg.textContent = '‚ö†Ô∏è Network error. Please try again later.';
        }
      });
    })();
  </script>

</body>
